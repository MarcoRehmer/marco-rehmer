---
import Layout from "../layouts/Layout.astro";
interface TimelineGroup {
  fromTo: string;
  groupTitle: string;
  projects: ReadonlyArray<{
    title: string;
    type: "project" | "education" | "open-source";
    techs: ReadonlyArray<string>;
  }>;
}

const timeline: ReadonlyArray<TimelineGroup> = [
  {
    fromTo: "2022 - heute",
    groupTitle: "Web Developer / Co-Team Lead (t2Informatik GmbH)",
    projects: [
      {
        title:
          "Clockmate - Zeiterfassung für Einzelpersonen und kleinere Unternehmen",
        type: "open-source",
        techs: ["Svelte", "NestJS"],
      },
      {
        title: "Squirrel News - Mobile News App zum lesen von kuratierten News",
        type: "open-source",
        techs: ["Ionic Framework", "React"],
      },
      {
        title:
          "Geleiteter Zuordnungs- und Verarbeitungsprozess von Akten und Antragstellern im Asylverfahren",
        type: "project",
        techs: ["Typescript", "Angular"],
      },
      {
        title: "Antworterhebung von konfigurierbaren Fragebögen",
        type: "project",
        techs: ["Typescript", "Angular"],
      },
    ],
  },
  {
    fromTo: "2021 - 2022",
    groupTitle: "Web Developer (t2Informatik GmbH)",
    projects: [
      {
        title:
          "Administrations-Oberfläche zur Verwaltung von automatisierten Background-Tasks",
        type: "project",
        techs: ["Typescript", "Angular"],
      },
      {
        title:
          "Konfigurator zur Angebotserstellung zum Verkauf von Dialyse-Systemen",
        type: "project",
        techs: ["Typescript", "Angular"],
      },
      {
        title: "Monitoring von Patientendaten im Dialyse-Prozess",
        type: "project",
        techs: ["Typescript", "Angular"],
      },
    ],
  },
  {
    fromTo: "2018 - 2021",
    groupTitle: "Lead Mobile Developer (sys-pro GmbH)",
    projects: [
      {
        title: "Angular Crash Course for fast Developers (Udemy)",
        type: "education",
        techs: ["Angular"],
      },
      {
        title: "RactJS - The Complete Course (Udemy)",
        type: "education",
        techs: ["React"],
      },
      {
        title: "automatisiertes Replenishment in einem Mode-Unternehmen",
        type: "project",
        techs: ["C#", "Xamarin"],
      },
      {
        title:
          "Mobile App für logistische Vorgänge mit RFID-Unterstützung (Wareneingang / Warenausgang)",
        type: "project",
        techs: ["C#", "Windows CE", "Xamarin"],
      },
    ],
  },
  {
    fromTo: "2014 - 2018",
    groupTitle: "Frontend Developer / Junior Backend Developer (sys-pro GmbH)",
    projects: [
      {
        title: "Fernschule (SGD) 1 Jahr Android Development",
        type: "education",
        techs: ["Android"],
      },
      {
        title: "dezentrale Offline-Ready Mobile App zur Preis-Etikettierung",
        type: "project",
        techs: ["C#", "Windows CE"],
      },
      {
        title:
          "Mobile App zur Bestandserfassung / Inventur mit RFID-Technologie",
        type: "project",
        techs: ["C#", "Windows CE"],
      },
    ],
  },
];
---

<Layout title="Timeline">
  <main>
    <h4>Legende</h4>

    <div style="display: flex; justify-content: space-between;">
      <p><i class="fa-solid fa-briefcase"></i>Projekt</p>
      <p><i class="fa-solid fa-hand-holding-heart"></i>Open-Source</p>
      <p><i class="fa-solid fa-user-graduate"></i>Bildung</p>
    </div>

    <div
      style="border-top: solid 1px lightgray; width: 100%; margin-top: 1rem; margin-bottom: 2rem;"
    >
    </div>

    {
      timeline.map((element, idx) => (
        <>
          <div class="timeline-head">
            <span class="from-to">{element.fromTo}</span>
            <span class="group-title">{element.groupTitle}</span>
          </div>
          {element.projects.map((project) => (
            <>
              <div class="project-block">
                <p>
                  <i
                    class:list={[
                      "fa-solid",
                      project.type === "project"
                        ? "fa-briefcase"
                        : project.type === "education"
                        ? "fa-user-graduate"
                        : project.type === "open-source"
                        ? "fa-hand-holding-heart"
                        : "",
                    ]}
                  />
                  {project.title}
                </p>

                <div class="tags-container">
                  {project.techs.map((tech) => (
                    <span>{tech}</span>
                  ))}
                </div>
              </div>
            </>
          ))}
        </>
      ))
    }
  </main>
</Layout>

<style>
  .timeline-head {
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 1rem;
  }

  .from-to {
    font-size: 1.75rem;
    margin-right: 1rem;
  }

  .group-title {
    flex-grow: 1;
    font-size: 1.15rem;
  }

  p {
    font-size: 1rem;
    margin-bottom: 0;
  }

  .project-block:not(:last-child) {
    margin-bottom: 3rem;
  }

  i {
    margin-right: 0.5rem;
    color: gray;
    font-size: 1.15rem;
  }

  .tags-container {
    margin-top: 0.5rem;
    align-self: flex-end;
    display: flex;
    flex-direction: row;
    column-gap: 1rem;
  }

  .tags-container span {
    background: var(--color-tag-background);
    border-radius: 12px;
    padding: 0 0.5rem;
  }
</style>
