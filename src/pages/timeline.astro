---
import { timeline } from "../data/timeline";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Timeline">
  <main>
    <h4>Legende</h4>

    <div style="display: flex; justify-content: space-between;">
      <p><i class="fa-solid fa-briefcase"></i>Projekt</p>
      <p><i class="fa-solid fa-hand-holding-heart"></i>Open-Source</p>
      <p><i class="fa-solid fa-user-graduate"></i>Bildung</p>
    </div>

    <div
      style="border-top: solid 1px lightgray; width: 100%; margin-top: 1rem; margin-bottom: 2rem;"
    >
    </div>

    {
      timeline.map((element, idx) => (
        <>
          <div class="timeline-head">
            <span class="from-to">{element.fromTo}</span>
            <span class="group-title">{element.groupTitle}</span>
          </div>
          {element.projects.map((project) => (
            <>
              <div class="project-block">
                <p>
                  <i
                    class:list={[
                      "fa-solid",
                      project.type === "project"
                        ? "fa-briefcase"
                        : project.type === "education"
                        ? "fa-user-graduate"
                        : project.type === "open-source"
                        ? "fa-hand-holding-heart"
                        : "",
                    ]}
                  />
                  {project.title}
                </p>

                <div class="tags-container">
                  {project.techs.map((tech) => (
                    <span>{tech}</span>
                  ))}
                </div>
              </div>
            </>
          ))}
        </>
      ))
    }
  </main>
</Layout>

<style>
  .timeline-head {
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 1rem;
  }

  .from-to {
    font-size: 1.75rem;
    margin-right: 1rem;
  }

  .group-title {
    flex-grow: 1;
    font-size: 1.15rem;
  }

  p {
    font-size: 1rem;
    margin-bottom: 0;
  }

  .project-block:not(:last-child) {
    margin-bottom: 3rem;
  }

  i {
    margin-right: 0.5rem;
    color: gray;
    font-size: 1.15rem;
  }

  .tags-container {
    margin-top: 0.5rem;
    align-self: flex-end;
    display: flex;
    flex-direction: row;
    column-gap: 1rem;
  }

  .tags-container span {
    background: var(--color-tag-background);
    border-radius: 12px;
    padding: 0 0.5rem;
  }
</style>
